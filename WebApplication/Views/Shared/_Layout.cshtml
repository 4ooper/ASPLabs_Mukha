<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="wrapper">
        <header>
            <div class="header-container">
                <ul>
                    <li><a class="header-link" href="/contractors">Подрядчики</a></li>
                    <li><a class="header-link" href="/contractorMaterials">Материалы подрядчика</a></li>
                    <li><a class="header-link" href="/contractorTechnique">Техника подрядчика</a></li>
                    <li><a class="header-link" href="/account">Аккаунт</a></li>
                </ul>
            </div>
        </header>
        <main>
            <div class="main-container">
                @RenderBody()
            </div>
        </main>
        <footer>
            <h1>Лабораторная работа #4</h1>
            <h4>Студент группы ИТП-31 Муха Андрей</h4>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
