@model BuildingContractor.Application.Producers.Quieres.GetProducersList.ProducerListVm
@{
    ViewData["Title"] = "Producer Page";
}

<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    a {
        text-decoration: none;
        cursor: pointer;
        transition: 0.3s;
        font-size: 20px;
        color: black;
        margin-bottom: 20px;
    }
    a:hover {
        color: red;
        text-decoration: underline;
    }
</style>


<div class="container">
    <h1>Таблица Producers</h1>
    <a href="/">Назад</a>
    <table border="1">
    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>
    @foreach (var item in Model.producers)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.name</td>
        </tr>
    }
</table>
</div>